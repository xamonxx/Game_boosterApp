<?xml version="1.0" encoding="utf-8"?>
<!-- Warning callout box: left border accent with tinted background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFF3D00" />
            <corners
                android:topRightRadius="8dp"
                android:bottomRightRadius="8dp" />
        </shape>
    </item>
    <item android:right="0dp" android:top="0dp" android:bottom="0dp">
        <inset android:insetRight="-1dp">
            <shape android:shape="rectangle">
                <size android:width="3dp" />
                <solid android:color="#FFFF3D00" />
            </shape>
        </inset>
    </item>
</layer-list>
