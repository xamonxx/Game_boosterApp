<?xml version="1.0" encoding="utf-8"?>
<!-- bg_hud_panel.xml â€” Background glassmorphism panel untuk HUD cards -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E612122A" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Neon top border trace -->
    <item android:top="0dp" android:bottom="-1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0000E5FF"
                android:centerColor="#4D00E5FF"
                android:endColor="#0000E5FF"
                android:angle="0" />
            <size android:height="2dp" />
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp" />
        </shape>
    </item>
    <!-- Subtle border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#2600E5FF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
