<?xml version="1.0" encoding="utf-8"?>
<!--
  dialog_thermal_warning.xml — Thermal Warning Dialog Layout
  Matches thermal_warning_dialog/code.html prototype:
  - Hazard stripes top/bottom
  - Warning icon with thermostat overlay
  - "PERINGATAN THERMAL!" headline
  - Temperature readout box
  - Danger callout with risk text
  - Primary "Matikan Mode" button
  - Secondary "Lanjutkan" button
  - "Mode Dewa System Override" footer
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!-- Dialog card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_thermal_dialog"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <!-- Hazard stripe top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_thermal_hazard_stripe" />

        <!-- Content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="20dp">

            <!-- Warning icon area -->
            <FrameLayout
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginBottom="20dp">

                <!-- Glow behind icon -->
                <View
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@drawable/bg_btn_thermal_primary" />

                <!-- Warning triangle icon -->
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/thermal_icon_desc"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:tint="@color/status_danger" />
            </FrameLayout>

            <!-- Headline: PERINGATAN THERMAL! -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:shadowColor="#80FF3D00"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/thermal_headline_1"
                android:textAlignment="center"
                android:textColor="@color/status_danger"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:shadowColor="#80FF3D00"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/thermal_headline_2"
                android:textAlignment="center"
                android:textColor="@color/status_danger"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Temperature readout box -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_thermal_temp_readout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    android:text="@string/thermal_current_temp"
                    android:textColor="@color/text_tertiary"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thermal_temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.08"
                    android:text="--°C"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Body text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/thermal_body_text"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="15sp" />

            <!-- Danger callout box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_thermal_callout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@null"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:tint="@color/status_danger" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/thermal_callout_text"
                    android:textColor="#E6FF3D00"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Primary button: Matikan Mode -->
            <FrameLayout
                android:id="@+id/btn_thermal_deactivate"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_btn_thermal_primary"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@null"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.08"
                        android:text="@string/thermal_btn_deactivate"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Secondary button: Lanjutkan -->
            <FrameLayout
                android:id="@+id/btn_thermal_continue"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_btn_thermal_secondary"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.15"
                        android:text="@string/thermal_btn_continue"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:contentDescription="@null"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@color/text_tertiary" />
                </LinearLayout>
            </FrameLayout>

            <!-- Footer label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:letterSpacing="0.2"
                android:text="@string/thermal_footer"
                android:textColor="#33FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Hazard stripe bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_thermal_hazard_stripe" />

    </LinearLayout>

</FrameLayout>
