<?xml version="1.0" encoding="utf-8"?>
<!-- item_session_history.xml — Item sesi gaming di riwayat -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/card_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/card_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Profile Color Indicator -->
        <View
            android:id="@+id/viewProfileIndicator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/neon_orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Row 1: Game Name + Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textSessionGameName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile Legends"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/textSessionProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="ULTRA"
                    android:textColor="@color/status_danger"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!-- Row 2: Date + Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textSessionDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25 Feb 2026 14:20"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textSessionDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="01:24:37"
                    android:textColor="@color/neon_cyan"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Row 3: Stats (Temp | FPS | Battery) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textSessionTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="72°C"
                    android:textColor="@color/neon_orange"
                    android:textSize="11sp"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/textSessionFps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="58 FPS"
                    android:textColor="@color/neon_cyan"
                    android:textSize="11sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textSessionBattery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="-23%"
                    android:textColor="@color/neon_magenta"
                    android:textSize="11sp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
