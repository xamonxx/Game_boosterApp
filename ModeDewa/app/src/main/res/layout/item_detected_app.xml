<?xml version="1.0" encoding="utf-8"?>
<!-- item_detected_app.xml â€” Item layout untuk RecyclerView daftar app terdeteksi -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp"
    android:background="?attr/selectableItemBackground">

    <!-- App Icon with status indicator -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon"
            android:contentDescription="App Icon" />

        <!-- Status indicator dot -->
        <View
            android:id="@+id/viewStatusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="-2dp"
            android:background="@drawable/circle_indicator_active" />
    </FrameLayout>

    <!-- App Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Status Badge (AUTO/MANUAL/MATI) -->
            <TextView
                android:id="@+id/textStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_auto"
                android:fontFamily="monospace"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:text="AUTO"
                android:textColor="@color/neon_green"
                android:textSize="9sp"
                android:textStyle="bold" />

            <!-- Profile Label -->
            <TextView
                android:id="@+id/textProfileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="monospace"
                android:text="Profil: BALANCED"
                android:textColor="@color/text_tertiary"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Per-App Toggle -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchAppToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:thumbTint="@color/neon_cyan"
        app:trackTint="@color/toggle_off" />
</LinearLayout>
