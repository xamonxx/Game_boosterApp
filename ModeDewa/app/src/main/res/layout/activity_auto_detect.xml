<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp">

        <!-- ============ HEADER ============ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_cancel"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@color/text_secondary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/auto_detect_title"
                    android:textColor="@color/neon_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="@string/auto_detect_subtitle"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textStatusIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="AKTIF"
                android:textColor="@color/neon_green"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <!-- ============ SECTION 1: DETECTION ENGINE + MASTER TOGGLE ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/neon_cyan_dim"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header + Master Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_engine"
                        android:textAllCaps="true"
                        android:textColor="@color/neon_cyan"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15"
                        android:fontFamily="monospace" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchMasterToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>

                <!-- Stats Row: Terdeteksi / Aktif / Nonaktif -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Terdeteksi -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textDetectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="0"
                            android:textColor="@color/neon_cyan"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="@string/auto_detect_detected"
                            android:textColor="@color/text_tertiary"
                            android:textSize="9sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <!-- Aktif -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textActiveCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="0"
                            android:textColor="@color/neon_green"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="@string/auto_detect_active"
                            android:textColor="@color/text_tertiary"
                            android:textSize="9sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <!-- Nonaktif -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textInactiveCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="0"
                            android:textColor="@color/status_inactive"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="@string/auto_detect_inactive"
                            android:textColor="@color/text_tertiary"
                            android:textSize="9sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 2: DETECTED APPS LIST ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header + Tambah Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_apps_title"
                        android:textAllCaps="true"
                        android:textColor="@color/neon_cyan"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15"
                        android:fontFamily="monospace" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddCustomApp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/auto_detect_add"
                        android:textColor="@color/neon_cyan"
                        android:textSize="10sp"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconSize="14dp"
                        app:iconTint="@color/neon_cyan"
                        app:strokeColor="@color/card_border" />
                </LinearLayout>

                <!-- RecyclerView untuk detected apps -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerDetectedApps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 3: SMART PROFILE SWITCHING ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_smart_profile"
                        android:textAllCaps="true"
                        android:textColor="@color/neon_magenta"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15"
                        android:fontFamily="monospace" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchSmartProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_detect_smart_profile_desc"
                    android:textColor="@color/text_tertiary"
                    android:textSize="11sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 4: KONFIGURASI ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_detect_config"
                    android:textAllCaps="true"
                    android:textColor="@color/neon_cyan"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:fontFamily="monospace" />

                <!-- Interval Scan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_interval"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textIntervalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="3 detik"
                        android:textColor="@color/neon_cyan"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="9"
                    android:progress="2"
                    android:progressTint="@color/neon_cyan"
                    android:thumbTint="@color/neon_cyan" />

                <!-- Battery-Aware Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_battery_aware"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_battery_aware_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchBatteryAware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>

                <!-- Notifikasi Controller -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_notif_ctrl"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_notif_ctrl_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchNotifController"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>

                <!-- Auto-Disable App Bawaan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_disable_bloat"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_disable_bloat_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAutoDisable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>

                <!-- Auto Re-Enable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_re_enable"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_re_enable_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAutoReEnable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/neon_cyan"
                        app:trackTint="@color/toggle_off" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 5: SESSION STATS ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_detect_last_session"
                    android:textAllCaps="true"
                    android:textColor="@color/neon_orange"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:fontFamily="monospace" />

                <!-- Durasi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/auto_detect_play_duration"
                        android:textColor="@color/text_tertiary"
                        android:textSize="9sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.15" />

                    <TextView
                        android:id="@+id/textSessionDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="--:--:--"
                        android:textColor="@color/neon_cyan"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textSessionGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada sesi"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textSessionDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats Grid 2x2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_max_temp"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textMaxTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="--"
                            android:textColor="@color/neon_orange"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_avg_fps"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textAvgFps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="--"
                            android:textColor="@color/neon_cyan"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_ram_used"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textRamUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="--"
                            android:textColor="@color/neon_green"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_detect_battery_used"
                            android:textColor="@color/text_tertiary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textBatteryUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="--"
                            android:textColor="@color/neon_magenta"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 6: DETECTION LOG ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_log"
                        android:textAllCaps="true"
                        android:textColor="@color/text_tertiary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/btnClearLog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_detect_clear"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:padding="4dp" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:id="@+id/containerLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============ SECTION 7: QUICK ACTIONS ============ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_detect_quick_actions"
                    android:textAllCaps="true"
                    android:textColor="@color/neon_cyan"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:fontFamily="monospace" />

                <!-- 2x2 Grid Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanUlang"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_scan"
                        android:textColor="@color/neon_cyan"
                        android:textSize="11sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_search"
                        app:iconTint="@color/neon_cyan"
                        app:strokeColor="@color/neon_cyan_dim" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBoostNow"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_boost"
                        android:textColor="@color/status_danger"
                        android:textSize="11sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconTint="@color/status_danger"
                        app:strokeColor="@color/status_danger" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCoolDown"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_cool"
                        android:textColor="@color/neon_green"
                        android:textSize="11sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconTint="@color/neon_green"
                        app:strokeColor="@color/neon_green" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReset"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="@string/auto_detect_reset"
                        android:textColor="@color/text_tertiary"
                        android:textSize="11sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_rotate"
                        app:iconTint="@color/text_tertiary"
                        app:strokeColor="@color/card_border" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
